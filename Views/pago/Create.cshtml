@model lafacustorev2.Models.Pago
@{
    ViewData["Title"] = "Pago";
}
<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row">
        <!-- Formulario -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-controller="Pago" asp-action="Pagar" method="post">
                        <input type="hidden" asp-for="UserID" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="NombreTarjeta" class="control-label">Nombre en la Tarjeta</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="NombreTarjeta" class="form-control" placeholder="Nombre en la tarjeta" />
                            </div>
                            <span asp-validation-for="NombreTarjeta" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NumeroTarjeta" class="control-label">NÃºmero de Tarjeta</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                </div>
                                <input asp-for="NumeroTarjeta" class="form-control" placeholder="1234-5678-9012-3456" data-inputmask="'mask': '9999-9999-9999-9999'" />
                            </div>
                            <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DueDateYYMM" class="control-label">Fecha de Vencimiento (YY/MM)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                </div>
                                <input asp-for="DueDateYYMM" class="form-control" placeholder="YY/MM" data-inputmask="'mask': '99/99'" />
                            </div>
                            <span asp-validation-for="DueDateYYMM" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cvv" class="control-label">CVV</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="Cvv" class="form-control" placeholder="CVV" data-inputmask="'mask': '999'" />
                            </div>
                            <span asp-validation-for="Cvv" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MontoTotal" class="control-label">Monto Total</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                </div>
                                <input asp-for="MontoTotal" class="form-control" placeholder="Monto Total" data-thousands="," data-decimal="." />
                            </div>
                            <span asp-validation-for="MontoTotal" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Pagar</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <h2>@ViewData["Message"]</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Imagen -->
        <div class="col-md-6">
            <div class="text-center">
                <img src="https://img.freepik.com/foto-gratis/mujer-joven-pagando-cafe-lector-tarjetas-credito_329181-2080.jpg" alt="Pago" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>