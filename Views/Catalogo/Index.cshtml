@model IEnumerable<lafacustorev2.Models.Producto>
@{
    ViewData["Title"] = "Catalogo";
}

<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                      <img src="@item.ImageURL" class="d-block w-100 image-fit">
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p style="display: inline-block; margin-right: 5px;">S/.</p>
                  <p  style="display: inline-block; margin-right: 5px;" class="card-text">@Html.DisplayFor(modelItem => item.Price)</p><br>
                  <a class="btn btn-primary" asp-controller="Carrito" asp-action="Add" asp-route-id="@item.Id">Agregar</a>
                  <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>