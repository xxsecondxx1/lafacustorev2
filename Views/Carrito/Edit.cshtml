@model lafacustorev2.Models.Proforma

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Editar cantidad de productos</h1>

    <div class="row">
        <!-- Formulario -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Proforma</h4>
                    <hr />
                    <form asp-controller="Carrito" asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="Precio" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Cantidad" class="control-label">Cantidad</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-sort-numeric-up"></i></span>
                                </div>
                                <input asp-for="Cantidad" class="form-control" placeholder="Ingrese la cantidad" />
                            </div>
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary w-100">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
            </div>
        </div>
        
        <!-- Imagen -->
        <div class="col-md-6">
            <div class="text-center">
                <img src="https://thumbs.dreamstime.com/b/corregir-documentos-para-corregir-errores-88617301.jpg" alt="Editar" class="img-fluid rounded shadow mt-4 mt-md-0">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}